@model PaginationViewModel
<h1>Pagination</h1>

<div class="d-flex justify-content-center mt-4">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="@Model.Action"
                       asp-controller="@Model.Controller"
                       asp-all-route-data="@Model.RouteParams"
                       asp-route-page="@(Model.CurrentPage-1)"
                       asp-route-tagId="@Model.TagId"
                       asp-route-categoryId="@Model.CategoryId">Previous</a>
                </li>
            }
            @for (int i = Model.CurrentPage - Model.LimitItem; i <= Model.CurrentPage + Model.LimitItem; i++)
            {
                if (i > 0 && i <= Model.TotalPages)
                {
                    <li class="page-item @(i==Model.CurrentPage ? "active" : ' ')">
                        <a class="page-link"
                           asp-action="@Model.Action"
                           asp-controller="@Model.Controller"
                           asp-all-route-data="@Model.RouteParams"
                           asp-route-tagId="@Model.TagId"
                           asp-route-categoryId="@Model.CategoryId"
                           asp-route-page="@i"
                           >@i</a>
                    </li>
                }
            }
            @if (Model.TotalPages > Model.CurrentPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="@Model.Action"
                       asp-controller="@Model.Controller"
                       asp-all-route-data="@Model.RouteParams"
                       asp-route-tagId="@Model.TagId"
                       asp-route-categoryId="@Model.CategoryId"
                       asp-route-page="@(Model.CurrentPage+1)"
                       >Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
