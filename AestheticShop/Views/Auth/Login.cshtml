﻿
@{
	ViewData["Title"] = "Login";
}


@model LoginViewModel

<h1>Вход</h1>


<form method="post" asp-controller="Auth" asp-action="Login">
	<div asp-validation-summary=All class="text-danger"></div>

	<div class="form-group">
		<label asp-for="Login"></label>
		<input class="form-control" asp-for="Login" placeholder="Login">
		<span asp-validation-for="Login" class="form-text text-danger"></span>

	</div>

	<div class="form-group">
		<label asp-for="Password"></label>
		<input class="form-control" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password" class="form-text text-danger"></span>

	</div>

	<button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial"> </partial>
}