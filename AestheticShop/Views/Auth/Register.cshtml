@{
	ViewData["Title"] = "Register";
}

@model RegisterViewModel

<h1>Регистрация </h1>

<form method="post" asp-controller="Auth" asp-action="Register"> 
	<div class="form-group"> 
	<label asp-for="Login">Login</label>  
	<input class="form-control" asp-for="Login" placeholder="Enter email">  
	<span asp-validation-for="Login"  class="form-text text-danger"></span> 

</div> 

	<div class="form-group"> 
	<label asp-for="Password">Login</label>
		<input class="form-control" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password" class="form-text text-danger"></span>

	</div> 

	<div class="form-group">
		<label asp-for="PasswordAgain">Login</label>
		<input class="form-control" asp-for="PasswordAgain" placeholder="PasswordAgain">
		<span asp-validation-for="PasswordAgain" class="form-text text-danger"></span>

	</div>
		

	<button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts
{
	<partial name="_ValidationScriptsPartial"> </partial>
}
