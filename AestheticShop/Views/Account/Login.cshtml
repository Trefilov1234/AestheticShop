
@{
    ViewData["Title"] = "Login";
}


@model LoginViewModel

<h1>Вход</h1>

<form method="post" asp-controller="Account" asp-action="Login">
	<div asp-validation-summary=All class="text-danger"></div>

	@* <input name="returnUrl" value="@ViewBag.ReturnUrl" type = "hidden"/> *@

	<div class="form-group">
		<label asp-for="Login"></label>
		<input class="form-control" asp-for="Login" placeholder="Login">
		<span asp-validation-for="Login" class="form-text text-danger"></span>

	</div>

	<div class="form-group">
		<label asp-for="Password"></label>
		<input class="form-control" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password" class="form-text text-danger"></span>

	</div>

	<div class="mb-3 form-check">
		<input asp-for="RememberMe" type="checkbox" class="form-check-input" id="exampleCheck1">
		<label asp-for="RememberMe" class="form-check-label" for="exampleCheck1"></label>
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>
	<div>Нет аккаунта?</div><a asp-controller="Account" asp-action="Register">Register</a>
</form>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial"> </partial>
}

